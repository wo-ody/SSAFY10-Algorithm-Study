import java.util.Scanner;

public class L8_2903 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		int now = 2;
		int result = 0;
		for (int i = 0; i < N; i++) {
			now = now + now - 1;
			result = now * now;
		}
		System.out.println(result);

		sc.close();
	}

}
